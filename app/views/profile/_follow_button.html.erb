<%= turbo_frame_tag(dom_id(@user)) do %>
  <% if following?(user) %>
    <%= button_to "Unfollow", profile_unfollow_path(id: user.id), class: "flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50", method: :delete %>
  <% else %>
    <%= button_to "Follow", profile_follow_path(id: user.id), class: "flex justify-center items-center px-4 py-2 border border-sky-800 shadow-sm text-sm font-medium rounded-md text-white bg-sky-700 hover:bg-sky-500", method: :post %>
  <% end %>
<% end %>

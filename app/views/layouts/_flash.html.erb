<%if flash[:notice] %>
  <div id="notification" class="absolute w-full px-3 py-6 mb-4 border rounded bg-green-200 border-green-300 text-green-800 text-lg" data-controller="notification">
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" data-dismiss="alert">&times;</button>
    <%=flash[:notice]%>
  </div>
<%end%>
<%if flash[:alert] %>
  <div id="notification" class="absolute w-full px-3 py-3 mb-4 border rounded bg-orange-200 border-orange-300 text-orange-800 text-lg" data-controller="notification">
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
<% end %>
<%if flash[:error]%>
  <div id="notification" class="absolute w-full px-3 py-3 mb-4 border rounded bg-red-200 border-red-300 text-red-800 text-lg" data-controller="notification">
    <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" data-dismiss="alert">&times;</button>
    <%=flash[:error]%>
  </div>
<% end %>
